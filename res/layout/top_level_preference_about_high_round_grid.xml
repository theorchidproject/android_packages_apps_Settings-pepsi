<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="@dimen/grid_pref_width"
    android:layout_height="160dp"
    android:layout_marginRight="@dimen/grid_pref_internal_margin"
    android:layout_marginBottom="@dimen/grid_pref_internal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="6dp"
        android:paddingStart="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/search_bar_corner_radius">
      
        <com.rice.utils.aboutWallpaperView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:elevation="0dp"
            android:contentDescription="@null"
            android:foreground="@drawable/wallpaper_scrim"
            android:background="@drawable/wallpaper_scrim"
            android:orientation="horizontal" />
  
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:layout_marginEnd="10dp">
            <TextView
                android:ellipsize="marquee"
                android:id="@android:id/summary"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44.0dip"
                android:background="@drawable/homepage_text_bg"
            	android:paddingHorizontal="8dp"
            	android:paddingVertical="2dp"
                android:singleLine="true"
                android:textColor="@color/op_control_text_color_primary_inverse"
                android:textSize="@dimen/grid_summary_text_size"
                style="@style/op_control_text_style_h6" />

            <TextView
                android:id="@android:id/title"
                style="@style/op_control_text_style_body1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@android:id/summary"
                android:layout_alignStart="@android:id/summary"
                android:layout_alignLeft="@android:id/summary"
                android:maxLines="4"
                android:textColor="@color/op_control_text_color_secondary" />
        </RelativeLayout>

        <FrameLayout
            android:id="@id/icon_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-90dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="38dp">

            <androidx.preference.internal.PreferenceImageView
                android:id="@android:id/icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:maxHeight="52.5dp"
                app:maxWidth="52.5dp" />

        </FrameLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
