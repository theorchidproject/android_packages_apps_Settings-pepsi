<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/OrchidOs_card_height_settings"
    android:layout_marginStart="@dimen/OrchidOs_card_view_start_margin"
    android:layout_marginEnd="@dimen/OrchidOs_card_view_end_margin"
    android:background="@drawable/OrchidOs_card_view_bg_bottom"
    android:paddingStart="@dimen/OrchidOs_card_view_start_padding"
    android:paddingEnd="@dimen/OrchidOs_card_view_end_padding">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="50dp">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/OrchidOs_black"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/OrchidOs_off_black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
