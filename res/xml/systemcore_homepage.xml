<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/systemcore_homepage_title" >

    <!-- About the system -->
    <Preference
        android:key="aboutsystemcore"
        android:title="@string/category_aboutsystemcore_title"
        android:fragment="com.systemcore.settings.fragments.Aboutsystemcore"
        android:layout="@layout/preference_category_aboutsystemcore" />

    <!-- Animations -->
    <Preference
        android:key="animations"
        android:title="@string/category_animations_title"
        android:fragment="com.systemcore.settings.fragments.Animations"
        android:layout="@layout/preference_category_animations" />

    <!-- Buttons -->
    <Preference
        android:key="buttons"
        android:title="@string/category_buttons_title"
        android:fragment="com.systemcore.settings.fragments.Buttons"
        android:layout="@layout/preference_category_buttons" />

    <!-- DesignCorner -->
    <Preference
        android:key="designcorner"
        android:title="@string/category_designcorner_title"
        android:fragment="com.systemcore.settings.fragments.DesignCorner"
        android:layout="@layout/preference_category_designcorner" />

    <!-- Gestures -->
    <Preference
        android:key="gestures"
        android:title="@string/category_gestures_title"
        android:fragment="com.systemcore.settings.fragments.Gestures"
        android:layout="@layout/preference_category_gestures" />

    <!-- Lockscreen -->
    <Preference
        android:key="lockscreen"
        android:title="@string/category_lockscreen_title"
        android:fragment="com.systemcore.settings.fragments.LockScreen"
        android:layout="@layout/preference_category_lockscreen" />

    <!-- Miscellaneous -->
    <Preference
        android:key="miscellaneous"
        android:title="@string/category_miscellaneous_title"
        android:fragment="com.systemcore.settings.fragments.Miscellaneous"
        android:layout="@layout/preference_category_miscellaneous" />

    <!-- Navigation -->
    <Preference
        android:key="navigation"
        android:title="@string/category_navigation_title"
        android:fragment="com.systemcore.settings.fragments.Navigation"
        android:layout="@layout/preference_category_navigation" />

    <!-- Notifications -->
    <Preference
        android:key="notifications"
        android:title="@string/category_notifications_title"
        android:fragment="com.systemcore.settings.fragments.Notifications"
        android:layout="@layout/preference_category_notifications" />

    <!-- Power Menu -->
    <Preference
        android:key="powermenu"
        android:title="@string/category_powermenu_title"
        android:fragment="com.systemcore.settings.fragments.PowerMenu"
        android:layout="@layout/preference_category_powermenu" />

    <!-- Quick Settings -->
    <Preference
        android:key="quicksettings"
        android:title="@string/category_quicksettings_title"
        android:fragment="com.systemcore.settings.fragments.QuickSettings"
        android:layout="@layout/preference_category_quicksettings" />

    <!-- Statusbar -->
    <Preference
        android:key="statusbar"
        android:title="@string/category_statusbar_title"
        android:fragment="com.systemcore.settings.fragments.Statusbar"
        android:layout="@layout/preference_category_statusbar" />

</PreferenceScreen>
